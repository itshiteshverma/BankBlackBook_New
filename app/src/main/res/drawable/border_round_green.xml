<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- View background color -->

    <gradient
        android:angle="135"
        android:centerColor="#6916e724"
        android:endColor="#863ffb1a"
        android:startColor="#00e5e9e7"
        android:type="linear" />
    // Button Colour
    <!-- View border color and width -->
    <stroke
        android:width="2dp"
        android:color="#6a000000"></stroke>

    <!-- The radius makes the corners rounded -->
    <corners android:radius="@dimen/card_radius"></corners>

</shape>