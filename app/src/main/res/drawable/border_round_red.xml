<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- View background color -->


    <gradient
        android:angle="135"
        android:centerColor="#48f20b03"
        android:endColor="#46e21607"
        android:startColor="#00e5e8e9"
        android:type="linear" />


    // Button Colour
    <!-- View border color and width -->
    <stroke
        android:width="2dp"
        android:color="#6a000000"></stroke>

    <!-- The radius makes the corners rounded -->
    <corners android:radius="@dimen/card_radius"></corners>

</shape>