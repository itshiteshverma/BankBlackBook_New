<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.itshiteshverma.bankblackbook.FD.AddFD"
    tools:showIn="@layout/activity_add_fd">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="10dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="FD/CIF Number *"
                    android:paddingTop="20dp">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/etFDNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:inputType="textCapCharacters"
                        android:maxLength="50"
                        android:paddingLeft="10dp"
                        app:met_baseColor="#e2292a2a"
                        app:met_clearButton="true"
                        app:met_errorColor="#eaf1350f"
                        app:met_floatingLabel="highlight"
                        app:met_helperText="Unique FD Number"
                        app:met_maxCharacters="20"
                        app:met_primaryColor="#d52a71f5" />


                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Bank Name Or Branch *"
                    android:paddingTop="20dp">


                    <com.itshiteshverma.bankblackbook.HelperClass.CustomAutoCompleteView
                        android:id="@+id/etFDBankName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:completionThreshold="1"
                        android:inputType="textCapCharacters"
                        android:maxLength="50"
                        android:paddingLeft="10dp"
                        app:met_baseColor="#e2292a2a"
                        app:met_clearButton="true"
                        app:met_errorColor="#eaf1350f"
                        app:met_floatingLabel="highlight"
                        app:met_maxCharacters="20"
                        app:met_primaryColor="#d52a71f5"></com.itshiteshverma.bankblackbook.HelperClass.CustomAutoCompleteView>


                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Account Number *"
                    android:paddingTop="20dp">


                    <com.itshiteshverma.bankblackbook.HelperClass.CustomAutoCompleteView
                        android:id="@+id/etFDACNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:completionThreshold="1"
                        android:inputType="phone"
                        android:maxLength="50"
                        android:paddingLeft="10dp"
                        app:met_baseColor="#e2292a2a"
                        app:met_clearButton="true"
                        app:met_errorColor="#eaf1350f"
                        app:met_floatingLabel="highlight"
                        app:met_maxCharacters="20"
                        app:met_primaryColor="#d52a71f5"></com.itshiteshverma.bankblackbook.HelperClass.CustomAutoCompleteView>


                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name of FD Holder *"
                    android:paddingTop="20dp">


                    <com.itshiteshverma.bankblackbook.HelperClass.CustomAutoCompleteView
                        android:id="@+id/etNameofFDHolder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:completionThreshold="1"
                        android:inputType="textCapCharacters"
                        android:maxLength="50"
                        android:paddingLeft="10dp"
                        app:met_baseColor="#e2292a2a"
                        app:met_clearButton="true"
                        app:met_errorColor="#eaf1350f"
                        app:met_floatingLabel="highlight"
                        app:met_maxCharacters="20"
                        app:met_primaryColor="#d52a71f5"></com.itshiteshverma.bankblackbook.HelperClass.CustomAutoCompleteView>


                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Interest Rate [%] *">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/etFDIntrestRate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:inputType="numberDecimal"
                        android:maxLength="50"
                        android:paddingLeft="10dp"
                        app:met_baseColor="#e2292a2a"
                        app:met_clearButton="true"
                        app:met_errorColor="#eaf1350f"
                        app:met_floatingLabel="highlight"
                        app:met_maxCharacters="50"
                        app:met_primaryColor="#d52a71f5" />


                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Principal Amount *">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/etFDPrincipalAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:inputType="phone"
                        android:maxLength="50"
                        android:paddingLeft="10dp"
                        app:met_baseColor="#e2292a2a"
                        app:met_clearButton="true"
                        app:met_errorColor="#eaf1350f"
                        app:met_floatingLabel="highlight"
                        app:met_helperText="Initial Amount"
                        app:met_maxCharacters="20"
                        app:met_primaryColor="#d52a71f5" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Guranteed Matured Sum *">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/etFDGauranteedMaturedSum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:inputType="phone"
                        android:maxLength="50"
                        android:paddingLeft="10dp"
                        app:met_baseColor="#e2292a2a"
                        app:met_clearButton="true"
                        app:met_errorColor="#eaf1350f"
                        app:met_floatingLabel="highlight"
                        app:met_maxCharacters="20"
                        app:met_primaryColor="#d52a71f5" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nominee (if any)"
                    android:paddingTop="20dp">


                    <com.itshiteshverma.bankblackbook.HelperClass.CustomAutoCompleteView
                        android:id="@+id/etFDNominee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:completionThreshold="1"
                        android:inputType="textCapCharacters"
                        android:maxLength="50"
                        android:paddingLeft="10dp"
                        app:met_baseColor="#e2292a2a"
                        app:met_clearButton="true"
                        app:met_errorColor="#eaf1350f"
                        app:met_floatingLabel="highlight"
                        app:met_maxCharacters="20"
                        app:met_primaryColor="#d52a71f5"></com.itshiteshverma.bankblackbook.HelperClass.CustomAutoCompleteView>


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="FD Notes/Remark">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/etFDRemarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:inputType="text"
                        android:maxLength="150"
                        android:paddingLeft="10dp"
                        app:met_baseColor="#e2292a2a"
                        app:met_clearButton="true"
                        app:met_errorColor="#eaf1350f"
                        app:met_floatingLabel="highlight"
                        app:met_maxCharacters="150"
                        app:met_primaryColor="#d52a71f5" />


                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Options" />

                <CheckBox
                    android:id="@+id/checkbox_AutoRenewal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:padding="10dp"
                    android:text="Auto Renewal"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14dp"
                        android:layout_marginStart="14dp"
                        android:text="Start Date *"
                        android:textSize="18dp" />

                    <Button
                        android:id="@+id/bFDStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="10dp"
                        android:drawableRight="@drawable/ic_start_black_24dp"
                        android:gravity="left|center_vertical"
                        android:onClick="onStartDateClickFD"
                        android:text="Start Date" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14dp"
                        android:layout_marginStart="14dp"
                        android:text="Maturity Date *"
                        android:textSize="18dp" />

                    <Button
                        android:id="@+id/bFDMaturityDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="10dp"
                        android:drawableRight="@drawable/ic_maturity_black_24dp"
                        android:gravity="left|center_vertical"
                        android:onClick="onMaturityDateClickFD"
                        android:text="Maturity Date " />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Documents (Optional)" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <Button
                        android:id="@+id/imageButtonAddFD_PDF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="50"
                        android:drawableLeft="@drawable/ic_picture_as_pdf_black_24dp"
                        android:padding="20dp"
                        android:text="Upload PDF/DOC" />


                    <Button
                        android:id="@+id/imageButtonAddFD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="50"
                        android:drawableRight="@drawable/ic_add_a_photo_black_24dp"
                        android:padding="20dp"
                        android:text="Upload Image" />


                </LinearLayout>


                <ImageView
                    android:id="@+id/imageViewPhotoAddFD"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_marginTop="20dp"
                    android:visibility="gone" />


            </LinearLayout>


            <ImageButton
                android:id="@+id/ibDone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="#b532eb69"
                android:onClick="onDoneClick"
                android:padding="7dp"
                android:src="@drawable/ic_done_black_24dp" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
